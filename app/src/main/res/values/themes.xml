<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyElementaryParticleApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_200</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="ButtonGeneral">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/rounded_corner_smaller</item>
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/abu</item>
        <item name="android:textSize">20sp</item>
        <item name="android:elevation">3dp</item>
    </style>

    <style name="FontParagraf">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:justificationMode">inter_word</item>
<!--        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>-->
        <item name="android:textColor">@color/abu</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FontParagrafSmall">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:justificationMode">inter_word</item>
<!--        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Small</item>-->
        <item name="android:textColor">@color/abu</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="FontParagrafLarge">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:justificationMode">inter_word</item>
<!--        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>-->
        <item name="android:textColor">@color/abu</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


    <style name="dropDownList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textColor">@color/abu</item>
    </style>
    <style name="bgDropDownList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:background">@drawable/rounded_corner_smaller</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:elevation">2dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="avatarChoose">
        <item name="android:layout_marginHorizontal">5dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/rounded_corner</item>
    </style>

    <style name="btnContohSoal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:background">@drawable/rounded_corner_smaller</item>
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textColor">@color/abu</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">5dp</item>
    </style>

    <style name="layoutResultLatihan">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="soalResultLatihan">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/abu</item>
        <item name="android:layout_weight">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="jawabanSalah">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/nunito_sans_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/wrong</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:backgroundTint">#F8BBD0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_close_24</item>
        <item name="android:drawableTint">@color/wrong</item>
        <item name="android:text">Salah</item>
    </style>
    <style name="jawabanBenar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/nunito_sans_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/right</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:backgroundTint">#B2DFDB</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_done_24</item>
        <item name="android:drawableTint">@color/right</item>
        <item name="android:text">Benar</item>
    </style>
    <style name="jawabanKosong">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_corner</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/nunito_sans_black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/abu</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:backgroundTint">@color/abu_terang</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawableLeft">@drawable/ic_baseline_empty_alt_24</item>
        <item name="android:drawableTint">@color/abu</item>
        <item name="android:text">Kosong</item>
    </style>
    <style name="detailPartikel">
        <item name="android:layout_column">0</item>
        <item name="android:padding">3dip</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/abu</item>
    </style>
    <style name="detailPartikelIsi">
        <item name="android:layout_column">0</item>
        <item name="android:padding">3dip</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/abu</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>