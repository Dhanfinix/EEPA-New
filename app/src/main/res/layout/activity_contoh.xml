<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".asah.ContohActivity">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/news_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/arrowBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:fontFamily="@font/nunito_sans_black"
        android:text="@string/contoh_soal"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintStart_toEndOf="@+id/arrowBack"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/silahkan_pilih_nomor_untuk_melihat_soal_dan_penyelesaiannya"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:fontFamily="@font/nunito_sans_bold"
        android:textColor="@color/abu"
        app:layout_constraintTop_toBottomOf="@id/imageView4"
        android:textSize="18sp"/>

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headline"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/cth1"
            style="@style/btnContohSoal"
            android:text="1"/>
        <TextView
            android:id="@+id/cth2"
            style="@style/btnContohSoal"
            android:text="2"/>
        <TextView
            android:id="@+id/cth3"
            style="@style/btnContohSoal"
            android:text="3"/>
        <TextView
            android:id="@+id/cth4"
            style="@style/btnContohSoal"
            android:backgroundTint="@color/abu_terang"
            android:text="4"/>
        <TextView
            android:id="@+id/cth5"
            style="@style/btnContohSoal"
            android:backgroundTint="@color/abu_terang"
            android:text="5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/row1"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/cth6"
            style="@style/btnContohSoal"
            android:backgroundTint="@color/abu_terang"
            android:text="6"/>
        <TextView
            android:id="@+id/cth7"
            style="@style/btnContohSoal"
            android:backgroundTint="@color/abu_terang"
            android:text="7"/>
        <TextView
            android:id="@+id/cth8"
            style="@style/btnContohSoal"
            android:backgroundTint="@color/abu_terang"
            android:text="8"/>
        <TextView
            android:id="@+id/cth9"
            style="@style/btnContohSoal"
            android:backgroundTint="@color/abu_terang"
            android:text="9"/>
        <TextView
            android:id="@+id/cth10"
            style="@style/btnContohSoal"
            android:backgroundTint="@color/abu_terang"
            android:paddingHorizontal="12dp"
            android:text="10"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>