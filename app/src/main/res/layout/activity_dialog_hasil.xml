<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".asah.DialogHasilActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/soalKe"
            style="@style/headline"
            android:layout_width="wrap_content"
            tools:text="@string/soalKe"
            android:layout_marginBottom="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/hasilPeriksa"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/hasilPeriksa"
            tools:text="INi Hasil"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/isiSoal"
            style="@style/FontParagrafSmall"
            tools:text="@string/soal_1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/soalKe"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/isiSoal">
            <TextView
                style="@style/FontParagrafSmall"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:text="Jawabanmu:"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/jawabanMu"
                style="@style/FontParagrafSmall"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="0dp"
                tools:text="elementer dan komposit"
                android:layout_weight="1"/>

            <TextView
                style="@style/FontParagrafSmall"
                android:layout_marginStart="0dp"
                android:layout_marginBottom="0dp"
                android:text="Kunci Jawaban:"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/kunciJawaban"
                style="@style/FontParagrafSmall"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="0dp"
                tools:text="boson dan fermion"
                android:layout_weight="1"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>