<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/latar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".materi.MateriPengantar">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/aturTeks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal|bottom"
            android:layout_marginTop="-120dp"
            android:background="@drawable/bg_setting_mini"
            app:layout_constraintTop_toBottomOf="@id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_sans_black"
                    android:textColor="@color/abu"
                    android:layout_marginLeft="20dp"
                    android:text="@string/ukuran_teks"/>
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    app:singleSelection="true"
                    app:layout_constraintBottom_toTopOf="@id/toggleGroupColor"
                    app:layout_constraintStart_toStartOf="@id/gambar"
                    app:layout_constraintTop_toBottomOf="@id/gambar"
                    app:layout_constraintEnd_toEndOf="@id/gambar">

                    <Button
                        android:id="@+id/btnSmall"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/nunito_sans_black"
                        android:textAllCaps="false"
                        android:textColor="@color/abu"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:text="@string/kecil"/>
                    <Button
                        android:id="@+id/btnMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_sans_black"
                        android:textAllCaps="false"
                        android:textColor="@color/abu"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:text="@string/sedang"/>
                    <Button
                        android:id="@+id/btnLarge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_sans_black"
                        android:textAllCaps="false"
                        android:textColor="@color/abu"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:text="@string/besar"/>

                </com.google.android.material.button.MaterialButtonToggleGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/nunito_sans_black"
                    android:textColor="@color/abu"
                    android:layout_weight="1"
                    android:text="@string/warna_latar"/>
                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/toggleGroupColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    app:singleSelection="true">

                    <Button
                        android:id="@+id/btnGreen"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_sans_black"
                        android:textAllCaps="false"
                        android:textColor="@color/abu"
                        android:text="@string/hijau" />

                    <Button
                        android:id="@+id/btnPeach"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_sans_black"
                        android:textAllCaps="false"
                        android:textColor="@color/abu"
                        android:text="@string/coklat" />

                    <Button
                        android:id="@+id/btnOrange"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_sans_black"
                        android:textAllCaps="false"
                        android:textColor="@color/abu"
                        android:text="@string/jingga" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/news_bg"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/arrowBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_black"
            android:text="@string/_1_pengantar"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"

            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/arrowBack"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/setText"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_baseline_settings_24"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/gambar"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/materiscroll1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aturTeks">

            <tag
                android:id="@+id/zoomable"
                android:value="ZoomableViewTag" />
        </ImageView>

        <TextView
            android:id="@+id/bagian1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bagian 1"
            android:layout_marginLeft="20dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toBottomOf="@id/gambar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/body1"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"/>

        <TextView
            android:id="@+id/body1"
            style="@style/FontParagraf"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:lineSpacingMultiplier="1.4"
            android:text="\t Semua benda yang ada di alam semesta ini tersusun oleh komponen yang lebih kecil. Contohnya galaksi tersusun dari sistem keplanetan yang juga tersusun dari planet-planet dan bintang. Contoh yang lebih sederhana dalam kehidupan sehari-hari yaitu baju, di mana benda tersebut tersusun oleh kain yang juga tersusun oleh ribuan helai benang.
\n \t Dari dua contoh tersebut, kita bisa mengidentifikasi bahwa bahan penyusunnya masih terus dapat diperoleh hingga tidak bisa dibagi lagi. Saat bahan penyusun tidak dapat dibagi lagi, muncullah istilah atomos (tidak dapat dibagi) yang pertama kali dirumuskan oleh filsuf Yunani yaitu Demokritus dan Leucippus  pada zaman Yunani Kuno 400 tahun sebelum masehi dan kini lebih dikenal dengan istilah."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bagian1" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/containerQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:name="com.dhandev.eepa.materi.MiniQuizFragment"
            app:layout_constraintTop_toBottomOf="@id/body1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>