<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_splash"
    tools:context=".asah.HasilLatihanActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_baseline_close_24"
            app:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/headerHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_black"
            android:gravity="center_horizontal"
            android:text="Hasil Latihan"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/close" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/fireworks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="5dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true" />

        <TextView
            android:id="@+id/skorTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:gravity="center"
            tools:text="60"
            android:textSize="40sp"
            android:fontFamily="@font/nunito_sans_black"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toBottomOf="@id/headerHasil"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/descHasil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:gravity="center_horizontal"
            tools:text="Selamat user, Kamu sudah berhasil menyelesaikan soal-soal latihan!"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/skorTotal" />

        <View
            style="@style/Divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descHasil" />

        <TextView
            android:id="@+id/rincian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rincian jawaban latihan:"
            app:layout_constraintTop_toBottomOf="@id/descHasil"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito_sans_bold"
            android:textSize="18sp"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:id="@+id/rincianHasil"
            style="@style/bgDropDownList"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rincian">

            <LinearLayout style="@style/layoutResultLatihan">

                <TextView
                    android:id="@+id/soalPertama"
                    style="@style/soalResultLatihan"
                    tools:text="1. Ini Soal Pertama" />

                <TextView
                    android:id="@+id/jawabanPertama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View style="@style/Divider" />

