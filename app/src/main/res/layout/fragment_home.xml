            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="100dp"
            android:background="@drawable/rounded_corner_smaller"
            android:drawableLeft="@drawable/ic_baseline_attach_file_24"
            android:fontFamily="@font/nunito_sans_bold"
            android:letterSpacing="0"
            android:text="@string/attachment"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/abu"
            android:textSize="18sp"
            app:backgroundTint="@color/biru_seken"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/referensi"
            app:layout_constraintTop_toBottomOf="@id/fitur" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
