            android:textColor="@color/abu"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />

        <TextView
            android:id="@+id/contoh"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corner_smaller"
            android:backgroundTint="@color/yellow"
            android:fontFamily="@font/nunito_sans_black"
            android:gravity="center_horizontal|bottom"
            android:text="@string/example"
            android:textColor="@color/abu"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="55dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/guideline3"
            app:layout_constraintTop_toTopOf="@id/iconContohSoal" />

        <ImageView
            android:id="@+id/iconContohSoal"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/contohsoal"
            app:layout_constraintEnd_toEndOf="@+id/contoh"
            app:layout_constraintStart_toStartOf="@+id/contoh"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/latihan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corner_smaller"
            android:backgroundTint="#FFCCBC"
            android:fontFamily="@font/nunito_sans_black"
            android:gravity="center_horizontal|bottom"
            android:text="@string/exercise"
            android:textColor="@color/abu"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:paddingBottom="5dp"
            android:paddingTop="55dp"
            android:layout_marginTop="20dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/guideline3"
            app:layout_constraintTop_toTopOf="@id/iconLatihan" />

        <ImageView
            android:id="@+id/iconLatihan"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:src="@drawable/latihan"
            app:layout_constraintEnd_toEndOf="@+id/latihan"
            app:layout_constraintStart_toStartOf="@+id/latihan"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/fitur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/nunito_sans_black"
            android:text="@string/other_menus"
            android:textColor="@color/abu"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contoh" />


        <Button
            android:id="@+id/referensi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/rounded_corner_smaller"
